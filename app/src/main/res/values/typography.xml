<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Body">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="maxLines">10</item>
        <item name="android:minLines">1</item>
        <item name="singleLine">false</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Body3">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="HintValueText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="maxLines">20</item>
        <item name="android:minLines">1</item>
        <item name="singleLine">false</item>
    </style>

    <style name="DoneToValueText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="DeleteValueText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ItemDescText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="maxLines">30</item>
        <item name="android:minLines">1</item>
        <item name="singleLine">false</item>
    </style>

    <style name="ItemDateText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="maxLines">10</item>
        <item name="android:minLines">1</item>
        <item name="singleLine">false</item>
    </style>

    <style name="ImportanceText">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="maxLines">10</item>
        <item name="android:minLines">1</item>
        <item name="singleLine">false</item>
    </style>

    <style name="CollapsingToolBar" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="ExpandedToolBar" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">20sp</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MaterialAlertDialog.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="MaterialAlertDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>