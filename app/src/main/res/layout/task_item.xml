<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/backgroundColor"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="5dp"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkBox"
            android:text=" "
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:maxLines="30"
            android:minLines="1"
            android:singleLine="false"
            app:buttonTint="@color/textColor"
            app:layout_constraintHorizontal_weight="10"
            android:buttonTint="@color/formsColorDark"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButtonInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroundColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="15dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            app:layout_constraintHorizontal_weight="1"
            app:srcCompat="@drawable/info_outline"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/dateOfTaskTextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:maxLines="10"
            android:minLines="1"
            android:singleLine="false"
            android:text="Дата какая-то"
            android:textColor="@color/blueFormsColor"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox"
            tools:ignore="MissingConstraints" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>